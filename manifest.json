{
  "manifest_version": 3,
  "name": "EPI-LENS",
  "version": "1.5",
  "description": "Real-time quantitative analysis of video content for photosensitive trigger detection.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "declarativeContent"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["analyzer.js", "content.js"],
    "run_at": "document_start"
  }],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
},
  "web_accessible_resources": [
    {
      "resources": ["charts.html", "charts.js", "charts.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
